  "api": {
    "rateLimit": {
      "enabled": true,
      "maxRequests": 100,
      "windowMs": 900000
    },
    "caching": {
      "enabled": true,
      "ttlMs": 300000
    }
  },
  
  "database": {
    "maxPromptsPerUser": 50,
    "enableContentReports": true,
    "enableDatasetDownloads": true
  },
  
  "analytics": {
    "enabled": false,
    "provider": null,
    "trackingId": null
  },
  
  "security": {
    "enableCORS": true,
    "allowedOrigins": ["http://localhost:3000"],
    "enableRateLimiting": true
  }
