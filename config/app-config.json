{
  "app": {
    "name": "Creative Writing Verification Interactive",
    "version": "1.0.0",
    "debugMode": false,
    "environment": "production"
  },
  
  "features": {
    "authentication": {
      "enabled": true,
      "disableForAnonymous": true,
      "requireEmailConfirmation": false
    },
    "dashboard": {
      "enabled": true,
      "showLink": true
    },
    "leaderboard": {
      "enabled": true,
      "showDateFilters": false
    },
    "resources": {
      "enabled": true
    },
    "dataset": {
      "enabled": true,
      "downloadUrl": null
    },
    "ui": {
      "showHelpButton": true,
      "enableDarkMode": false,
      "defaultTheme": "light"
    }
  },
  
  "models": {
    "defaultProvider": "openai",
    "defaultTemperature": 0.7,
    "defaultMaxTokens": 1024,
    "defaultSystemInstruction": "You are an expert storyteller and accomplished author. You have been trained to write compelling, engaging narratives across various genres and styles. When given a prompt, you will create a complete story that responds thoughtfully to the request while following any structural constraints provided.\n\nYou understand that good storytelling involves:\n- Engaging characters and authentic dialogue\n- Clear narrative structure and pacing\n- Vivid descriptions that immerse the reader\n- Emotional resonance and meaningful themes\n- Proper adherence to any length or formatting requirements\n\nYou will craft your story to meet the specified constraints while prioritizing narrative quality and reader engagement.",
    "configurations": [
      {
        "id": "gpt-4.5-preview-2025-02-27",
        "name": "GPT-4.5 Preview",
        "provider": "openai",
        "displayName": "GPT-4.5 (Latest)",
        "description": "OpenAI's most advanced model with enhanced creative capabilities",
        "temperature": 0.7,
        "enabled": true,
        "customSystemInstruction": null
      },
      {
        "id": "gpt-4.1-2025-04-14",
        "name": "GPT-4.1",
        "provider": "openai",
        "displayName": "GPT-4.1",
        "description": "High-quality creative writing with excellent instruction following",
        "temperature": 0.7,
        "enabled": true,
        "customSystemInstruction": null
      },
      {
        "id": "gpt-4o",
        "name": "GPT-4o",
        "provider": "openai",
        "displayName": "GPT-4o",
        "description": "Fast and capable multimodal model",
        "temperature": 0.7,
        "enabled": true,
        "customSystemInstruction": null
      },
      {
        "id": "gpt-4o-mini",
        "name": "GPT-4o Mini",
        "provider": "openai",
        "displayName": "GPT-4o Mini",
        "description": "Efficient and cost-effective creative writing",
        "temperature": 0.7,
        "enabled": true,
        "customSystemInstruction": null
      },
      {
        "id": "gpt-4-turbo",
        "name": "GPT-4 Turbo",
        "provider": "openai",
        "displayName": "GPT-4 Turbo",
        "description": "Balanced performance and quality",
        "temperature": 0.7,
        "enabled": true,
        "customSystemInstruction": null
